<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='../stylesheets/style_header.css' />
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
          
          <script src="https://kit.fontawesome.com/ae360af17e.js" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="../stylesheets/sidebar.css">
    <style>
        .tb1 {
            width: 100%;
            font-size: 100%;
            padding: 5px;
        }
        
        .tb2 {
            width: 100%;
            font-size: 100%;
            padding: 5px;
        }
        
        th {
            border: 1px solid rgb(229, 218, 218);
            border-bottom: 2px solid;
            text-align: center;
        }
        
        .th2 {
            border: none;
            text-align: center;
        }
        
        .th2 img {
            width: 30px;
            height: 30px;
        }
        
        td {
            border: 1px solid rgb(229, 218, 218);
            text-align: center;
            align-items: center;
        }
        
        .stt {
            width: 3%;
            text-align: center;
        }
        
        .id {
            width: 15%;
        }
        
        .anh {
            width: 10%;
            height: 30px;
        }
        
        .ten {
            width: 20%;
        }
        .trangThai{
            width: 10%;
        }
        
        .hanhDong {
            width: 10%;
        }
        
        .img1 {
            width: auto;
            height: auto;
            margin: auto;
            max-width: 100%;
            max-height: 50px;
            padding: 1%;
        }
        tr {
            margin-top: 10px;
        }
        
        .hang:hover {
            background-color: rgb(243, 241, 241);
            text-decoration: underline;
        }
        
        #searchForm {
            margin: 20px auto;
        }
        .modal-body{
            display: flex;
            flex-direction: column;
           width: 100%;
        }
        .modal-body input{
            width: 100%;
            height: 50px;
            margin: 20px auto;
        }
        .preview{
            padding: 30px;
        }
        .add{
            float: right;
            width: 10%;
            margin: 10px 15px;
            text-align: center;
            font-size: 100%;
            min-width: 70px;
        }
        .top{
            display: flex;
            align-items: center;
        }
        .top #searchForm{
            width: 100%;
            margin: auto;
        }
        .top #form2{
            width: 100%;
            margin: auto;
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <%- include('../inc/sidebar') %>
        <div class="main">
            <%- include('../inc/header') %>
            <div class="content col-md-10 sm-10" style="overflow: auto; height: 80vh">
                <div class="top">
                <form id="searchForm" action="/hang/search" method="GET">
                    <div class="row g-3">
                        <div class="col">
                            <input required="true" type="text" id="textQuery" name="query" class="form-control" placeholder="Tên">
                        </div>
                        <div class="col-auto">
                            <button type="submit" class="btn btn-primary">Tìm</button>
                        </div>
                        <div class="col-auto">
                            <button id="clear" class="btn btn-secondary">Clear</button>
                        </div>
                        <div class="col-auto">
                            <a href="/hang" id="clear" class="btn btn-secondary">All</a>
                        </div>
                    </div>
                </form>
                <div>
                    <button  type="button" class="add btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
                        Thêm
                    </button>
                    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered modal-xl">
                        <div class="form2 modal-content">
                            <form id="form2" method="post" action="hang/addHangSX" enctype="multipart/form-data">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="exampleModalLabel">Thêm Hãng</h1>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <input required="true" type="text" class="form-control" placeholder="Tên" name="tenHangSx">
                                    <input required="true" type="file" name="file" id="logoInput" accept="image/*">
                                </div>
                                <div class="form-check form-switch ms-3">
                                    <label class="form-check-label" for="flexSwitchCheckChecked">Trạng Thái</label>
                                    <input name="trangThai" class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" checked>
                                  </div>
                                <div class="modal-footer">
                                    <a type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</a>
                                    <button type="submit" class="btn btn-primary">Lưu</button>
                                </div>
                            </form>
                            <div class="preview">
                                <h5>Ảnh xem trước</h5>
                                <img id="logoPreview" src="#" style="max-width: 100%; max-height: 200px;">
                            </div>
                        </div>
                        </div>
                    </div>    
                </div>
            </div>
                <table class="tb1 table table-bordered table-hover mt-3">
                    <tr>
                        <th class="stt">STT</th>
                        <th class="id">ID</th>
                        <th class="anh">Ảnh</th>
                        <th class="ten">Tên</th>
                        <th class="trangThai">TrangThai</th>
                        <th class="hanhDong">Hành Động</th>
                    </tr>
                    <% listHang.forEach((Hangsx, index) => { %>
                    <tr class="hang">
                        <td><%= index + 1 %></td>
                        <td><%= Hangsx._id %></td>
                        <td><img class="img1" src="<%= Hangsx.imageLogo %>" alt=""></td>
                        <td><%= Hangsx.tenHangSx %></td>
                        <td><%= Hangsx.trangThai %></td>
                        <td>
                            <table class="tb2">
                                <th class="th2">
                                        <!-- Button trigger modal -->
                                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal<%= index %>">
                                            update
                                        </button>
                                        <!-- Modal -->
                                        <form action="/hang/update/<%= Hangsx._id %>" method="post" enctype="multipart/form-data">
                                            <div class="modal fade" id="exampleModal<%= index %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                <div class="modal-dialog modal-dialog-centered modal-xl ">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h1 class="modal-title fs-5" id="exampleModalLabel"><%= Hangsx.tenHangSx %></h1>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <div class="row">
                                                                <div class="col">
                                                                    <input required="true" value="<%= Hangsx.tenHangSx %>" type="text" class="form-control" placeholder="Tên" name="tenHangSx">
                                                                </div>
                                                                <div class="col">
                                                                    <label for="trangThai">Chọn trạng thái:</label>
                                                                    <select id="trangThai" name="trangThai" class="form-select">
                                                                        <% if (Hangsx.trangThai) { %>
                                                                            <option value="True">True</option>
                                                                            <option value="False">False</option>
                                                                        <% } else { %>
                                                                            <option value="False">False</option>
                                                                            <option value="True">True</option>
                                                                        <% } %>
                                                                    </select>
                                                                </div>
                                                            </div>
                                                            <div class="row">
                                                                <div class="col">
                                                                    <input type="file" name="logoFile" id="s" accept="image/*" onchange="previewImage(this)">
                                                                </div>
                                                                <div class="col">
                                                                    <img id="previewImg2" src="<%= Hangsx.imageLogo %>" alt="" style="width: auto; height: auto; max-width: 100%; max-height: 200px; margin: auto;">
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                            <button type="submit" class="btn btn-primary">Save changes</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                </th>
                            </table>
                        </td>
                    </tr>
                    <% }) %>
                </table>
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-end">
                      <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                          <span aria-hidden="true">&laquo;</span>
                        </a>
                      </li>
                      <li class="page-item"><a class="page-link" href="/hang">1</a></li>
                      <li class="page-item"><a class="page-link" href="/hang">2</a></li>
                      <li class="page-item"><a class="page-link" href="/hang">3</a></li>
                      <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                          <span aria-hidden="true">&raquo;</span>
                        </a>
                      </li>
                    </ul>
                  </nav>
            </div>
            <%- include('../inc/footer') %>
          </div>
    </div>




<script>
   document.getElementById("clear").addEventListener("click", function(){
        document.getElementById("textQuery").value = "";
    })
    const logoInput = document.getElementById('logoInput');
        const logoPreview = document.getElementById('logoPreview');

        logoInput.addEventListener('change', function () {
            const file = this.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    logoPreview.src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        });
        //
    document.getElementById('s').addEventListener('change', function () {
        previewImage(this);
    });

    function previewImage(input) {
        var preview = document.getElementById('previewImg2');
        var file = input.files[0];
        var reader = new FileReader();

        reader.onloadend = function () {
            preview.src = reader.result;
        }

        if (file) {
            reader.readAsDataURL(file);
        } else {
            preview.src = "";
        }
    }
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous">
    
    </script>
</body>
</html>
