<!DOCTYPE html>
<html>

<head>
    <title>
        <%= title %>
    </title>
    <link rel='stylesheet' href='/stylesheets/style_header.css' />
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
      <script src="https://kit.fontawesome.com/ae360af17e.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/stylesheets/sidebar.css">
    <style>
        .product-info {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
        }

        .product-info img {
            max-width: 400px;
            height: auto;
        }

        .bold-text {
            font-weight: bold;
        }

        .slideshow-container {
            position: relative;
            max-width: 400px;
            margin: auto;
        }

        .mySlides {
            display: none;
        }

        .prev,
        .next {
            cursor: pointer;
            position: absolute;
            top: 50%;
            width: auto;
            padding: 16px;
            margin-top: -22px;
            color: white;
            font-weight: bold;
            font-size: 18px;
            transition: 0.6s ease;
            border-radius: 0 3px 3px 0;
            user-select: none;
        }

        .next {
            right: 0;
            border-radius: 3px 0 0 3px;
        }

        .prev:hover,
        .next:hover {
            background-color: rgba(0, 0, 0, 0.8);
        }
    </style>
</head>

<body>
    <div class="wrapper">
        <%- include('../inc/sidebar') %>
            <div class="main ">
                <%- include('../inc/header') %>
                    <div class="content col-md-10 sm-10">
                        <div class="product-info">
                            <div class="slideshow-container">
                                <% for (let i=0; i < sanPham.anh.length; i++) { %>
                                    <div class="mySlides">
                                        <img src="<%= sanPham.anh[i] %>" style="width:100%">
                                    </div>
                                    <% } %>
                                        <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                                        <a class="next" onclick="plusSlides(1)">&#10095;</a>
                            </div>
                            <div class="mt-3 ms-3">
                                <h4>
                                    <%= sanPham.tenSanPham %>
                                </h4>
                                <p><strong>Giá tiền:</strong> <span class="text-danger fw-bold total-cell">
                                        <%= sanPham.bienThe[0].giaTien %>
                                    </span></p>
                                <p><strong>Số lượng:</strong>
                                    <%= sanPham.bienThe[0].soLuong %>
                                </p>
                            </div>
                        </div>
                        <p class="mt-3"><strong>Mô tả:</strong>
                            <%= sanPham.moTa %>
                        </p>
                        <h3>Thông số kỹ thuật:</h3>
                        <table class="table">
                            <tr>
                                <td><strong>Bộ xử lý</strong></td>
                                <td><strong>Màn hình</strong></td>
                            </tr>
                            <tr>
                                <td>
                                    <ul>
                                        <li><strong>CPU:</strong>
                                            <%= sanPham.cpu %>
                                        </li>
                                        <li><strong>Số nhân:</strong>
                                            <%= sanPham.soNhan %>
                                        </li>
                                        <li><strong>Số lượng CPU:</strong>
                                            <%= sanPham.soLuongCPU %>
                                        </li>
                                        <li><strong>Tốc độ CPU:</strong>
                                            <%= sanPham.tocDoCPU %>
                                        </li>
                                    </ul>
                                </td>
                                <td>
                                    <ul>
                                        <li><strong>Màn hình:</strong>
                                            <%= sanPham.display %>
                                        </li>
                                        <li><strong>Độ phân giải:</strong>
                                            <%= sanPham.doPhanGiai %>
                                        </li>
                                        <li><strong>Tần số quét:</strong>
                                            <%= sanPham.tanSoQuet %>
                                        </li>
                                        <li><strong>Độ phủ màu:</strong>
                                            <%= sanPham.doPhuMau %>
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Bộ nhớ Ram - Ổ cứng</strong></td>
                                <td><strong>Đồ họa và âm thanh</strong></td>
                            </tr>
                            <tr>
                                <td>
                                    <ul>
                                        <li><strong>RAM:</strong>
                                            <%= sanPham.bienThe[0].ram %>
                                        </li><li><strong>ROM:</strong>
                                            <%= sanPham.bienThe[0].rom %>
                                        </li>
                                        <li><strong>Loại RAM:</strong>
                                            <%= sanPham.loaiRam %>
                                        </li>
                                        <li><strong>Tốc độ Bus RAM:</strong>
                                            <%= sanPham.tocDoBusRam %>
                                        </li>
                                        <li><strong>Hỗ trợ RAM tối đa:</strong>
                                            <%= sanPham.hoTroRamToiDa %>
                                        </li>
                                    </ul>
                                </td>
                                <td>
                                    <ul>
                                        <li><strong>GPU:</strong>
                                            <%= sanPham.gpu %>
                                        </li>
                                        <li><strong>Công nghệ âm thanh:</strong>
                                            <%= sanPham.congNgheAmThanh %>
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Cổng kết nối và tính năng mở rộng</strong></td>
                                <td><strong>Kích thước và khối lượng</strong></td>
                            </tr>
                            <tr>
                                <td>
                                    <ul>
                                        <li><strong>Cổng giao tiếp:</strong>
                                            <%= sanPham.congGiaoTiep %>
                                        </li>
                                        <li><strong>Kết nối không dây:</strong>
                                            <%= sanPham.ketNoiKhongDay %>
                                        </li>
                                    </ul>
                                </td>
                                <td>
                                    <ul>
                                        <li><strong>Kích thước & Khối lượng:</strong>
                                            <%= sanPham.kichThuocKhoiLuong %>
                                        </li>
                                        <li>
                                        <li><strong>Chất liệu:</strong>
                                            <%= sanPham.chatLieu %>
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Thông tin khác</strong></td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>
                                    <ul>
                                        <li><strong>Pin:</strong>
                                            <%= sanPham.pin %>
                                        </li>
                                        <li><strong>Công suất sạc:</strong>
                                            <%= sanPham.congSuatSac %>
                                        </li>
                                        <li><strong>Thời điểm ra mắt:</strong>
                                            <%= sanPham.thoiDiemRaMat %>
                                        </li>
                                        <li><strong>Bảo hành:</strong>
                                            <%= sanPham.baohanh %>
                                        </li>
                                        <li><strong>Hệ điều hành:</strong>
                                            <%= sanPham.os %>
                                        </li>
                                        <li><strong>Phụ kiện:</strong>
                                            <%= sanPham.phuKien %>
                                        </li>
                                    </ul>
                                </td>
                                <td></td>
                            </tr>
                        </table>
                    </div>
                    <%- include('../inc/footer') %>
            </div>
    </div>

    <script>
        var slideIndex = 1;
        showSlides(slideIndex);

        function plusSlides(n) {
            showSlides(slideIndex += n);
        }

        function currentSlide(n) {
            showSlides(slideIndex = n);
        }

        function showSlides(n) {
            var i;
            var slides = document.getElementsByClassName("mySlides");
            if (n > slides.length) {
                slideIndex = 1
            }
            if (n < 1) {
                slideIndex = slides.length
            }
            for (i = 0; i < slides.length; i++) {
                slides[i].style.display = "none";
            }
            slides[slideIndex - 1].style.display = "block";
        }
    </script>
    <script>
        // Function to format currency
        function formatCurrency(amount) {
            return amount.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".") + "₫";
        }

        // Call formatCurrency function for each total amount in the table
        document.addEventListener("DOMContentLoaded", function () {
            const totalCells = document.querySelectorAll(".total-cell");
            totalCells.forEach(cell => {
                const amount = parseFloat(cell.textContent.trim());
                cell.textContent = formatCurrency(amount);
            });
        });
    </script>
</body>

</html>