<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <link rel='stylesheet' href='/stylesheets/style_header.css' />
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <script src="https://kit.fontawesome.com/ae360af17e.js" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/stylesheets/sidebar.css">
</head>

<body>
  <div class="wrapper">
    <%- include('../inc/sidebar') %>
      <div class="main">
        <%- include('../inc/header') %>
          <div class="content col-md-10 sm-10" style="overflow: auto; height: 80vh">
            <div class="container">
              <div class="card mb-3">
                <div class="card-header">
                  <strong>ID bảo hành:</strong>
                  <%= baoHanh._id %>
                </div>
                <div class="card-body">
                  <div class="row">
                    <div class="col-md-4">
                      <img src="<%= sanPham.anhSanPham %>" alt="Ảnh sản phẩm" class="img-fluid mb-3">
                      <h5 class="card-title">
                        <%= sanPham.tenSanPham %>
                      </h5>
                      <p class="card-text"><strong>Giá sản phẩm:</strong>
                        <%= sanPham.giaTien %>
                      </p>
                    </div>
                    <div class="col-md-4">
                      <h5 class="card-title">Thông tin người đặt</h5>
                      <p class="card-text">
                        <strong>Tên:</strong>
                        <% if(account && account.hoTen) { %>
                          <%= account.hoTen %>
                            <% } else { %>
                              Chưa có dữ liệu
                              <% } %>
                      </p>
                      <p class="card-text">
                        <strong>Địa chỉ:</strong>
                        <% if(account && account.diaChi) { %>
                          <%= account.diaChi.diaChi %>
                            <% } else { %>
                              Chưa có dữ liệu
                              <% } %>
                      </p>
                      <p class="card-text">
                        <strong>Số điện thoại:</strong>
                        <% if(account && account.sdt) { %>
                          <%= account.sdt %>
                            <% } else { %>
                              Chưa có dữ liệu
                              <% } %>
                      </p>
                      <% if(account && account.avatar) { %>
                        <img src="<%= account.avatar %>" alt="Avatar" class="img-fluid">
                        <% } else { %>
                          <p class="card-text">Chưa có dữ liệu</p>
                          <% } %>
                    </div>
                    <div class="col-md-4">
                      <h5 class="card-title">Thông tin đơn hàng</h5>
                      <p class="card-text"><strong>Lý do:</strong>
                        <%= baoHanh.lyDo %>
                      </p>
                      <h5 class="card-title">Danh sách ảnh bảo hành</h5>
                      <% if (baoHanh.anh && baoHanh.anh.length> 0) { %>
                        <div class="row">
                          <% baoHanh.anh.forEach((anh, index)=> { %>
                            <div class="col-md-6 mb-3">
                              <img src="<%= anh %>" alt="Ảnh bảo hành <%= index + 1 %>" class="img-fluid">
                            </div>
                            <% }); %>
                        </div>
                        <% } else { %>
                          <p class="card-text">Không có ảnh bảo hành.</p>
                          <% } %>
                            <p class="card-text"><strong>Trạng thái:</strong>
                              <% switch (baoHanh.tinhTrang) { case 1: %>
                                Chờ xác nhận
                                <% break; case 2: %>
                                  Đồng ý
                                  <% break; case 3: %>
                                    Từ chối
                                    <% break; default: %>
                                      Chờ xác nhận
                                      <% break; } %>
                            </p>
                            <% if(baoHanh.tinhTrang==1){%>
                              <form action="/bao-hanh/chi-tiet/<%= baoHanh._id %>?status=2" method="POST">
                                <button type="submit" class="btn btn-success">Đồng ý</button>
                              </form>
                              <form action="/bao-hanh/chi-tiet/<%= baoHanh._id %>?status=3" method="POST">
                                <button type="submit" class="btn btn-danger">Từ chối</button>
                              </form>
                              <% }%>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <%- include('../inc/footer') %>
      </div>
  </div>





</body>

</html>