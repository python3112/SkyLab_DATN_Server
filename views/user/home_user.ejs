<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='../stylesheets/style_header.css' />
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="css.css">
    <style>
        .tb1 {
            width: 100%;
            font-size: 100%;
            padding: 5px;
           
        }
        .tb2 {
            width: 100%;
            font-size: 100%;
            padding: 5px;
        }
        
        th {
            border: 1px solid rgb(229, 218, 218);
            border-bottom: 2px solid;
            text-align: center;
        }
        
        .th2 {
            border: none;
            text-align: center;
        }
        .th2 img {
            width: 30px;
            height: 30px;
        }
        
        td {
            border: 1px solid rgb(229, 218, 218);
            text-align: center;
            align-items: center;
        }
        
        .stt {
            width: 3%;
            text-align: center;
        }
        tr {
            margin-top: 10px;
        }
        
        .hang:hover {
            background-color: rgb(243, 241, 241);
            text-decoration: underline;
        }
        
        #searchForm {
            margin: 20px auto;
        }
        .modal-body{
            display: flex;
            flex-direction: column;
           width: 100%;
        }
        .modal-body input{
            width: 100%;
            height: 50px;
            margin: 20px auto;
        }
        .preview{
            padding: 30px;
        }
        .add{
            float: right;
            width: 10%;
            margin: 10px 15px;
            text-align: center;
            font-size: 100%;
            min-width: 70px;
        }
        .top{
            display: flex;
            align-items: center;
        }
        .top #searchForm{
            width: 100%;
            margin: 2% auto;
        }
        .top #form2{
            width: 100%;
            margin: auto;
        }
    </style>
</head>
<body>
<%- include('../inc/header') %>
<div class="d-flex flex-row">
    <%- include('../inc/sidebar') %>
    <div class="content col-md-10 sm-10" style="height: 80vh; overflow-y: auto;">
        <div class="top">
        <form id="searchForm" action="/user/queryUser" method="GET">
            <div class="row g-3">
                <div class="btn-group col col-xl-2 col-lg-2 col-md-2 col-sm-12">
                    <button id="dropdownMenuButton" class="btn btn-secondary btn-sm dropdown-toggle" type="button"
                      data-bs-toggle="dropdown" aria-expanded="false">
                      Tất cả
                    </button>
                    <ul class="dropdown-menu">
                      <li><a class="dropdown-item" href="/user">Tất cả</a></li>
                      <li><a class="dropdown-item" href="/user/userActiveTrue">Đang hoạt động</a></li>
                      <li><a class="dropdown-item" href="/user/userActiveFalse">Không còn hoạt động</a></li>
                    </ul>
                  </div>
                <div class="col">
                    <input required="true" type="text" id="textQuery" name="query" class="form-control" placeholder="Tên">
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-primary">Tìm</button>
                </div>
                <div class="col-auto">
                    <a id="clear" class="btn btn-secondary">Clear</a>
                </div>
            </div>
        </form>
    </div>
        <table class="tb1">
            <tr>
                <th >STT</th>
                <th >ID</th>
                <th >Tài Khoản</th>
                <th >Mật Khẩu</th>
                <th>Họ Tên</th>
                <th >Số Điện Thoại</th>
                <th >Email</th>
                <th >Địa Chỉ</th>
                <th >Trạng Thái</th>
                <th>Khác</th>
            </tr>
            <% listUser.forEach((user, index) => { %>
            <tr class="hang">
              <td><%= index + 1 %></td>
              <td><%= user._id %></td>
              <td><%= user.taiKhoan %></td>
              <td><input class="password" style="border: none; outline: none; text-align: center;" readonly="true" type="password" value="<%= user.matKhau %>" ></td>
              <td><%= user.hoTen %></td>
              <td><%= user.sdt %></td>
              <td><%= user.email %></td>
              <% if(user.diaChi) { %>
               <td><%= user.diaChi.diaChi %></td>
               <% } else { %>
                <td></td> 
                <% }%> 
              <td><%= user.trangThai %></td>
              <td>
                  <table class="tb2">
                      <th class="th2">                           <!-- Button trigger modal -->
                                <button id="ShowPassword" type="button" class="btn" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                    <img src="https://png.pngtree.com/png-vector/20190118/ourmid/pngtree-vector-view-icon-png-image_323837.jpg" />
                                </button>  
                      </th>
                  </table>
              </td>
              <% }) %>
          </tr>
        </table>
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-end">
              <li class="page-item">
                <a class="page-link" href="#" aria-label="Previous">
                  <span aria-hidden="true">&laquo;</span>
                </a>
              </li>
              <li class="page-item"><a class="page-link" href="/">1</a></li>
              <li class="page-item"><a class="page-link" href="/">2</a></li>
              <li class="page-item"><a class="page-link" href="/">3</a></li>
              <li class="page-item">
                <a class="page-link" href="#" aria-label="Next">
                  <span aria-hidden="true">&raquo;</span>
                </a>
              </li>
            </ul>
          </nav>
    </div>
  </div>
<%- include('../inc/footer') %>

<script>
   document.getElementById("clear").addEventListener("click", function(){
        document.getElementById("textQuery").value = "";
    })
    const logoInput = document.getElementById('logoInput');
        const logoPreview = document.getElementById('logoPreview');
        logoInput.addEventListener('change', function () {
            const file = this.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    logoPreview.src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        });
    
        // Lấy đối tượng p cần thay đổi kiểu
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous">
    </script>
</body>
</html>
